/*
Adds a PayPal payment module to the given DOM elements
See detailed documentation in Dev/mediawiki
*/

html.client-js .pay-via-paypal-module {
	display: none;
}

html.client-nojs .pay-via-paypal-module {
	display: block;
}

html.client-js .pay-via-paypal-module.js-fully-loaded {
	display: block;
}

.pay-via-paypal-module {
	--blue-lightest: #eaf2ff;
	--blue-light: #bae1ff;
	--blue-bright: #32b1ff;
	--blue-bright2: #009eff;
	--blue-dark: #3c5f7c;
}

.pay-via-paypal-module span:not(.min) {
	padding: 4px 0;
	text-align: center;
	font-size: 18px;
	cursor: pointer;
	display: block;
	flex: calc( 33.33% - 6px );
}

/* ---------------------- */
/* 1. Interval Navigation */

.pay-via-paypal-module .interval {
	display: flex;
	gap: 3px;
	flex-wrap: wrap;
}

.pay-via-paypal-module .interval span {
	border-radius: 8px 8px 0 0;
	background: var(--blue-dark);
	border: 1px solid var(--blue-dark);
	border-bottom: none;
	color: white;
}

.pay-via-paypal-module .interval span:hover {
	background: var(--blue-bright);	
}

.pay-via-paypal-module .interval span.active {
	background: white;
	color: var(--blue-dark);
}

/* -------- */
/* 2. Amout */

.pay-via-paypal-module .amount {
	border: 1px solid var(--blue-dark);
	border-width: 0 1px;
	display: flex;
	padding: 15px 0;
	flex-wrap: wrap;
	gap: 9px;
}

.pay-via-paypal-module .amount > span {
	border: 1px solid var(--blue-dark);
	color: var(--blue-dark);
	border-radius: 6px;
}

.pay-via-paypal-module:not(.interval-selected) .amount > span {
	filter: blur(4px);
	opacity: .5;
}

.pay-via-paypal-module .amount > span:nth-child(1),
.pay-via-paypal-module .amount > span:nth-child(4) {
	border-left: none;
	border-radius: 0 6px 6px 0;
}

.pay-via-paypal-module .amount > span:nth-child(3),
.pay-via-paypal-module .amount > span:nth-child(6) {
	border-right: none;
	border-radius: 6px 0 0 6px;
}
	
.pay-via-paypal-module .amount > span:before {
	content: '$';
	display: inline-block;
	margin-right: 2px;
}

.pay-via-paypal-module .amount > span:hover {
	background: var(--blue-lightest);
}

.pay-via-paypal-module .amount > span.active {
	background: var(--blue-light);
	color: var(--blue-dark);
	outline: 2px solid var(--blue-dark);
	font-weight: bold;
}

.pay-via-paypal-module .amount > span input {
	width: calc( 100% - 35px );
	text-align: center;
	border-radius: 5px;
	background: var(--blue-lightest);
	border: 1px solid var(--blue-dark);
	height: 25px;
	position: relative;
	top: -2px;
}

.pay-via-paypal-module .amount span.active input {
	background: white;
	outline: 1px solid var(--blue-dark);
}

.pay-via-paypal-module .amount .error, .pay-via-paypal-module .interval .error {
	display: none;
	font-size: 16px;
	color: red;
	text-align: center;
	width: 100%;
}

/* ---------------- */
/* 3. Submit Button */

.pay-via-paypal-module .submit {
	font-family: 'Roboto';
	display: block;
	width: 100%;
	text-align: center;
	padding: 4px 0;
	border-radius: 0 0 6px 6px;
	margin: 0 0 18px;
	background: var(--blue-bright);
	color: white;
	font-weight: bold;
	letter-spacing: 1px;
	font-size: 20px;
	cursor: pointer;
	border: 1px solid var(--blue-dark);
	border-top: none;
}

.pay-via-paypal-module .submit:hover {
	background: var(--blue-bright2);
}

/* ---------------- */
/* 4. Error Display */

.pay-via-paypal-module.paypal-amount-error .amount,
.pay-via-paypal-module.paypal-interval-error .interval {
	outline: 3px solid red;
	border-radius: 6px;
}

.pay-via-paypal-module.paypal-amount-error .amount .error,
.pay-via-paypal-module.paypal-interval-error .interval .error {
	display: block;
}

