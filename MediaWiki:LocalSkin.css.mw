/* ========= */
/* A. Global */

body {
	background: #f3f3f3;
	font-family: 'Roboto';
}

/* ========= */
/* B. Header */

#custom-header {
	background: white;
	box-shadow: 2px 2px 4px rgba(0,0,0,.1);
}

/* Logo Left */

#custom-header a.home {
	width: 160px;
	text-align: center;
}

#custom-header ~ * a:visited {
	color: #0645ad;
}

#custom-header a.home img {
	width: 143px;
	position: relative;	
	top: 9px;
}

/* Super Menu */

#custom-header .super-menu .submenus {
	background: white;
	border: 1px solid #ccc;
}

#custom-header .super-menu .submenus > * > *:not(.headline):hover {
	background: #eee;
}

/* Donate Button */

#custom-header .donate {
	width: 120px !important;
	background-position: 6px 9px !important;
	font-size: 23px;
	border-radius: 10px;
	margin-right: 5px;
}

#custom-header .donate img {
	top: -2px;
}

/* Mobile Version */

@media (max-width: 740px) {
	#custom-header .nav-menu .submenu {
		border: 1px solid #ccc;
		background: white;
	}
	#custom-header .nav-menu .submenu > *:hover {
		background: #eee;
	}
}
@media (max-width: 460px) {
	#custom-header a.home {
		width: 130px;
	}
	
	#custom-header a.home img {
		width: 130px;	
	}
	
	#custom-header .donate {
		font-size: 18px;
		font-weight: normal;
		width: 100px !important;
	}
}

