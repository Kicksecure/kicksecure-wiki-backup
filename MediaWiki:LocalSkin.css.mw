/*
CSS styling only applicable for the skin on the local wiki
See detailed documentation in Dev/mediawiki
*/

/* ========= */
/* A. Global */

body {
	background: #f3f3f3;
	font-family: 'Roboto';
}

/* ========= */
/* B. Header */

#custom-header {
	background: white;
	box-shadow: 2px 2px 4px rgba(0,0,0,.1);
}

/* Logo Left */

#custom-header a.home {
	width: 160px;
	text-align: center;
}

#custom-header ~ * a:visited {
	color: #0645ad;
}

#custom-header a.home img {
	width: 143px;
	position: relative;	
	top: 9px;
}

/* Super Menu */

#custom-header .super-menu .submenus {
	background: white;
	border: 1px solid #ccc;
}

#custom-header .super-menu .submenus > * > *:not(.headline):hover {
	background: #eee;
}

/* Donate Button */

#custom-header .donate {
	width: 120px !important;
	background-position: 6px 9px !important;
	font-size: 23px;
	border-radius: 10px;
}

#custom-header .donate img {
	top: -2px;
}

/* Mobile Version */

@media (max-width: 740px) {
	#custom-header .nav-menu .submenu {
		border: 1px solid #ccc;
		background: white;
	}
	#custom-header .nav-menu .submenu > *:hover {
		background: #eee;
	}
}
@media (max-width: 460px) {
	#custom-header a.home {
		width: 130px;
	}
	#custom-header a.home:after {
		background-size: 119px;
		background-position: 10px 12px;
	}
}

/* ============= */
/* C. SiteNotice */

#siteNotice {
	/* display: block !important; */
	display: none;
	/* Height of active banner */
	/* height: 180px; */
}

#siteNotice .banner {
	/* display: block; */
	display: none;
}

#siteNotice .banner > * {
	vertical-align: middle;
}

#siteNotice .mw-dismissable-notice-close i {
	color: white;
}

#siteNotice .banner-01 {
	padding: 5px 0;
	background: linear-gradient( #22a7dF, #43b3f1 );
	color: white;
	font-size: 20px;
	border-radius: 10px;
	border: 1px solid #22a7dF;
	text-decoration: none;
	width: 100%;
}

#siteNotice .banner-01:hover {
	background: linear-gradient( #1297cF, #43b3f1 );
}
	
#siteNotice .banner-01 .icon {
	margin-right: 13px;
	height: 40px;
}

#siteNotice .banner-01 span {
	position: relative;
	top: 1px;
}

/* ========= */
/* D. Footer */

#custom-footer .support {
	margin-bottom: 21px;
}

