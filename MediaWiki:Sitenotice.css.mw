/*
All styles for Widget:Sitenotice
See detailed documentation in Dev/mediawiki
*/

/* --------------------- */
/* 1. General SiteNotice */

#siteNotice {
	display: none;
}

#siteNotice #localNotice, p {
	margin: 0;
}

#siteNotice.hide-notice {
	display: none !important;
}

#siteNotice .sitenotice-body {
	position: relative;
}

#siteNotice .sitenotice-close {
	width: 14px;
	height: 14px;
	position: absolute;
	top: 11px;
	right: 13px;
	filter: brightness( 2 );
	z-index: 10;
	cursor: pointer;
}

#siteNotice .sitenotice-close img {
	width: 100%;
	height: 100%;
	object-fit: contain;	
}

#siteNotice .sitenotice-close:hover {
	filter: brightness( 1.7 );
	transform: scale( 1.3 );
}

#siteNotice .sitenotice-close.dark {
	filter: brightness( 0 );	
}

#siteNotice .sitenotice-close.dark:hover {
	filter: brightness( .9 );	
}

/* -------------- */
/* 2. All Banners */

#siteNotice .banner {
	display: none;
}

#siteNotice .banner.active {
	display: block;
}

#siteNotice .banner > * {
	vertical-align: middle;
}

