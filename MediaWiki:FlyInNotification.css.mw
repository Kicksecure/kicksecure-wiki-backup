/*
Widget: FlyInNotificaton - CSS Styling
See detailed documentation in Dev/mediawiki
*/

/* 1. General */

#fly-in-notification-panel {
	width: 300px;
	background: white;
	box-shadow: 3px 3px 7px rgba(0,0,0,.2);
	border-radius: 10px 0 0 10px;
	position: fixed;
	right: 0;
	top: calc( 50% - 215px );
	z-index: 1000;
	overflow: hidden;
	display: none;
	border: 6px solid #22a7df;
	border-right: none;
}

/* 2. Elements */

#fly-in-notification-panel .close-panel {
	float: left;
	color: #fff;
	font-size: 26px;
	padding: 10px;
	cursor: pointer;
	position: absolute;
	left: 3px;
	top: -1px;
	text-shadow: 0 0 1px #000, 0 0 2px #000, 0 0 3px #000;
}

#fly-in-notification-panel .close-panel:hover {
	transform: scale(1.2);
}

#fly-in-notification-panel .image {
	border-bottom: 3px solid #22a7df;;	
}

#fly-in-notification-panel img {
	width: 100%;
	object-fit: cover;
}

#fly-in-notification-panel .content {
	padding: 0 15px 10px 20px;
}

#fly-in-notification-panel .content h4 {
	font-size: 27px;
	margin: 0;
	padding-bottom: 0;
	text-align: center;
	line-height: 1.4em;
	color: #2490c5;
	font-weight: bold;
	border-bottom: 1px solid #22a7df;
	padding-bottom: 8px;
}

#fly-in-notification-panel .content p {
	text-align: justify;
	font-size: 18px;
	color: #555;
}

#fly-in-notification-panel .content p a {
	color: #2490c5;
	font-weight: bold;
}

