See detailed documentation in Dev/mediawiki
*/

(function() {
	
	if( $('body').hasClass('page-Homepage') ) {
		
		// Section Competition
		
		$('.section-competition .show-more').on( 'click', function() {
			$(this).remove();
			$('.section-competition .show-for-nojs-only').removeClass('show-for-nojs-only');
		});
		
		// Section Features
		
		$('.section-features, .section-values').find('.inner-wrapper > div:not(.mw-collapsible-content) a').on( 'click', function(e) {
			e.preventDefault();
			
			$('#' + $(this).attr('data-modal')).miniModal('show');
			
			return false;
		});
	}
	
})();